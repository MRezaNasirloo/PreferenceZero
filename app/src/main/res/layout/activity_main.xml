<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sixthsolution.materialpreferencesdemo.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.sixthsolution.materialpreferences.preferences.EasyPreferencesHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ep_title="@string/location_setting"
            app:ep_key="pref_header"
            app:ep_icon="@drawable/default_icon"
            />

        <com.sixthsolution.materialpreferences.preferences.EasyPreferenceSwitch
            android:id="@+id/preferences_auto_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ep_title="@string/auto_location"
            app:ep_default="false"
            app:ep_key="pref_auto_location"
            app:ep_icon="@android:drawable/ic_delete"
            />

        <com.sixthsolution.materialpreferences.preferences.EasyPreferenceCheckBox
            android:id="@+id/preferences_auto_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ep_title="Auto Update"
            app:ep_default="false"
            app:ep_key="pref_auto_update"
            app:ep_detail_on="Automatic Update"
            />

        <com.sixthsolution.materialpreferences.preferences.EasyPreferencesHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ep_title="@string/clock_date_setting"
            app:ep_key="pref_header"
            app:ep_icon="@drawable/default_icon"
            />

        <com.sixthsolution.materialpreferences.preferences.lists.EasyPreferenceListDialog
            android:id="@+id/preferences_choose_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pref_language_list_entries"
            android:entryValues="@array/pref_language_list_value"
            app:ep_default="1"
            app:ep_title="@string/language"
            app:ep_key="pref_choose_language"
            />

        <com.sixthsolution.materialpreferences.preferences.lists.EasyPreferenceListDialog
            android:id="@+id/preferences_choose_date_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pref_date_format_list_entries"
            android:entryValues="@array/pref_date_format_list_value"
            app:ep_default="1"
            app:ep_title="@string/date_format"
            app:ep_key="pref_date_format"
            />

        <com.sixthsolution.materialpreferences.preferences.EasyPreferenceSwitch
            android:id="@+id/preferences_clock_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ep_title="@string/clock_format"
            app:ep_default="true"
            app:ep_key="pref_clock_format"
            />

        <com.sixthsolution.materialpreferences.preferences.EasyPreferencesHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ep_title="@string/weather_settings"
            app:ep_key="pref_header"
            app:ep_icon="@drawable/default_icon"
            />

        <com.sixthsolution.materialpreferences.preferences.EasyPreferenceSwitch
            android:id="@+id/preferences_feel_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ep_title="@string/feel_temp"
            app:ep_default="true"
            app:ep_key="pref_feel_temp"
            app:ep_detail_on="Real temp may be 24 but it feels like 18"
            />


        <com.sixthsolution.materialpreferences.preferences.lists.EasyPreferenceListDialog
            android:id="@+id/preferences_choose_weather_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pref_weather_provider_list_entries"
            android:entryValues="@array/pref_weather_provider_list_value"
            app:ep_default="1"
            app:ep_title="@string/weather_provider"
            app:ep_key="pref_weather_provider"
            />

        <com.sixthsolution.materialpreferences.preferences.lists.EasyPreferenceListDialog
            android:id="@+id/preferences_choose_radar_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pref_radar_provider_list_entries"
            android:entryValues="@array/pref_radar_provider_list_value"
            app:ep_default="1"
            app:ep_title="@string/radar_provider"
            app:ep_key="pref_radar_provider"
            />

        <com.sixthsolution.materialpreferences.preferences.EasyPreferenceSwitch
            android:id="@+id/preferences_measurement_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ep_title="@string/measurement_unit"
            app:ep_default="true"
            app:ep_key="pref_measurement_unit"
            />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
