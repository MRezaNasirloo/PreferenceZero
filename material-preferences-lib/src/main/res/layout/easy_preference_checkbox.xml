<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/preference_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/easy_icon"
        android:layout_width="@dimen/easy_icon_size"
        android:layout_height="@dimen/easy_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/default_margin"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/easy_tittle"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/easy_icon"
        android:gravity="start"
        android:text="password status"
        />

    <TextView
        android:id="@+id/easy_detail"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/easy_tittle"
        android:layout_alignStart="@id/easy_tittle"
        android:layout_below="@id/easy_icon"
        android:gravity="start"
        android:text="detail"
        />

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/easy_checkable"
        android:layout_above="@+id/easy_detail"
        android:layout_alignRight="@+id/easy_detail"
        android:layout_alignEnd="@+id/easy_detail"
        android:clickable="false"
        android:focusable="false"
        />
</RelativeLayout>
