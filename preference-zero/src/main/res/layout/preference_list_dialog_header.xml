<RelativeLayout
    android:id="@+id/preference_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/dialog_header_background"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        />

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/dialog_header_background"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="3dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/header_image"
        android:layout_toRightOf="@id/header_image"
        android:layout_centerVertical="true"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />

</RelativeLayout>
