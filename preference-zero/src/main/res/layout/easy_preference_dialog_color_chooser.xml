<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/preference_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/easy_padding"
    android:orientation="horizontal"
    android:minHeight="@dimen/layout_min_height"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/easy_tittle"
        style="@style/TitleStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="choose color"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        />

    <com.mrezanasirloo.preferencezero.preferences.CircleView
        android:id="@+id/easy_color_preview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:backgroundColor="#33b5e5"
        />

</LinearLayout>
